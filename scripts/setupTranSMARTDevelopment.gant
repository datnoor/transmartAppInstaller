String.metaClass.or = { String s -> new File(delegate, s).path }
String.metaClass.compareVersion = { String s ->
    def arrs = [delegate, s].collect { it.split(/\./) as List }
    while (arrs.any()) {
        def cur = arrs*.getAt(0).collect { it ?: 0 } as int[]
        def r = cur[0] <=> cur[1]
        if (r) return r
        arrs = arrs*.drop(1)
    }
    return 0
}
