def readCounts(readLines)
{
    def counts = [:]
    readLines.each {
        def matcher = it =~ /^\s*(\w*)\s*\|\s*(\d+)\s*$/
        if (matcher) counts[matcher.group(1)] = matcher.group(2)
    }
    counts
}

